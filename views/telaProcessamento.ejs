                                showListFileAtual;

                            // Adicionando o conteúdo do arquivo no vetor de arquivos selecionados
                            arquivosSelecionados.push({ nome: fileName, conteudo: conteudo });

                            document.querySelector('#showListFile').addEventListener('click', function (event) {
